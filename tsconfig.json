{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
